{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "docs/**"]
		},
		"test": {
			"dependsOn": [],
			"outputs": []
		},
		"check": {
		},
		"fix": {
			"cache": false
		},
		"upload": {
			"dependsOn": ["build"],
			"outputs": [],
			"cache": false
		},
		"publish": {
			"dependsOn": ["^publish"],
			"outputs": [],
			"cache": false
		},
		"format": {
			"cache": false
		},
		"python_install": {
			"dependsOn": ["^python_install"],
			"outputs": [],
			"cache": false
		},
		"python_authenticate": {
			"dependsOn": [],
			"outputs": [],
			"cache": false
		},
		"ci": {
			"dependsOn": ["build", "check", "test"],
			"outputs": ["dist/**", "docs/**", "build/**", "storybook-static/**"]
		},
		"clean": {
			"cache": false
		},
		"release": {
			"cache": false
		}
	}
}
